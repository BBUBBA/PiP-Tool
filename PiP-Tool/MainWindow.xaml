<Window x:Class="PiP_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <Button x:Name="ButtonPip" 
                Content="Pip" 
                HorizontalAlignment="Left" 
                Margin="10,10,0,0" 
                VerticalAlignment="Top" 
                Width="75" 
                RenderTransformOrigin="0.112,-0.412"  
                Command="{Binding StartPictureInPicture}" />

        <Button x:Name="ButtonSelector" 
                Content="Selector" 
                HorizontalAlignment="Left" 
                Margin="116,10,0,0" 
                VerticalAlignment="Top" 
                Width="75"
                Command="{Binding StartSelector}" />

        <Button x:Name="ButtonWindowSelector" 
                Content="WindowSelector" 
                HorizontalAlignment="Left" 
                Margin="224,10,0,0" 
                VerticalAlignment="Top" 
                Width="126"
                Command="{Binding StartWindowSelector}" />

    </Grid>
</Window>
